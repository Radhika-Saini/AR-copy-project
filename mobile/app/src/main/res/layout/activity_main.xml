<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.arcopypaste.research.prototypes.text.TextProtoActivity">

  <android.opengl.GLSurfaceView
      android:id="@+id/surfaceview"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="top" />

  <TextView
      android:id="@+id/textview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha="0"
      android:background="#54000000"
      android:clickable="false"
      android:gravity="center_vertical"
      android:padding="20dp"
      android:textAlignment="textStart"
      android:textSize="18sp"
      android:textStyle="bold" />


  <View
      android:id="@+id/crop_camera"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_gravity="center"
      android:layout_marginStart="50dp"
      android:layout_marginEnd="50dp"
      android:background="@drawable/border" />

    <ImageView
        android:id="@+id/bt_resize"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="0px"
        android:layout_marginTop="0px"
        android:contentDescription="@string/bt_resize"
        app:srcCompat="@drawable/ic_white_circle" />

</FrameLayout>
